                statusElement.textContent = '';
                statusElement.style.animation = 'none';
                statusElement.offsetHeight;
                statusElement.style.animation = `typing 3s steps(${message.length}, end), blink 0.75s step-end infinite`;

                let i = 0;
                const typingInterval = setInterval(() => {
                    if (i < message.length) {
                        statusElement.textContent += message.charAt(i);
                        i++;
                    } else {
                        clearInterval(typingInterval);
                        setTimeout(() => {
                            statusElement.style.animation = 'none';
                            setTimeout(() => {
                                currentMessage = (currentMessage + 1) % messages.length;
                                typeNextMessage();
                            }, 1000);
                        }, 2000);
                    }
                }, 100);
            }

            typeNextMessage();
        }

        // Glitch effect on hover
        function initGlitchEffect() {
            const glitchText = document.querySelector('.glitch-text');

            glitchText.addEventListener('mouseenter', () => {
                glitchText.style.animation = 'glitch 0.3s linear';
            });

            glitchText.addEventListener('mouseleave', () => {
                glitchText.style.animation = '';
            });
        }

        // Initialize all animations
        document.addEventListener('DOMContentLoaded', () => {
            createParticles();
            createCursorTrail();
            animateProgressBars();
            typeStatusMessages();
            initGlitchEffect();

            // Randomize progress percentages every 5 seconds
            setInterval(() => {
                const percentages = document.querySelectorAll('.countdown-value');
                percentages.forEach(el => {
                    if (!el.id) return; // Skip if not a countdown element

                    // Add a subtle pulse effect
                    el.style.transform = 'scale(1.1)';
                    setTimeout(() => {
                        el.style.transform = 'scale(1)';
                    }, 200);
                });
            }, 5000);

            // Add a subtle background color shift
            const bg = document.querySelector('body');
            let hue = 240;

            setInterval(() => {
                hue = (hue + 0.1) % 360;
                bg.style.background = `linear-gradient(135deg, hsl(${hue}, 70%, 15%) 0%, hsl(${(hue + 30) % 360}, 70%, 10%) 100%)`;
            }, 50);
        });
    </script>
