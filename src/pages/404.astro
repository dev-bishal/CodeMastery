---
import MainLayout from "../layouts/MainLayout.astro";


---

<MainLayout
    pageTitle = "Page Not Found - CodeMastery"
    description = ""
    seoImagePath = ""
    pageType = ""
>

    <style is:inline>
        :root {
            --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-secondary: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }

        .theme-transition {
            transition: background-color 0.5s ease, color 0.3s ease;
        }

        .gradient-text {
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .gradient-bg {
            background: var(--gradient-primary);
        }

        /* Floating Animation */
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-20px); }
        }

        .floating {
            animation: float 3s ease-in-out infinite;
        }

        /* Code Animation */
        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }

        .blink {
            animation: blink 1s infinite;
        }

        /* Glitch Effect */
        @keyframes glitch {
            0% { transform: translate(0); }
            20% { transform: translate(-2px, 2px); }
            40% { transform: translate(-2px, -2px); }
            60% { transform: translate(2px, 2px); }
            80% { transform: translate(2px, -2px); }
            100% { transform: translate(0); }
        }

        .glitch {
            animation: glitch 0.3s ease infinite;
        }

        /* Background Pattern */
        .code-pattern {
            background-color: #f8fafc;
            background-image: 
                radial-gradient(#cbd5e1 1px, transparent 1px),
                radial-gradient(#cbd5e1 1px, transparent 1px);
            background-size: 40px 40px;
            background-position: 0 0, 20px 20px;
        }

        .dark .code-pattern {
            background-color: #0f172a;
            background-image: 
                radial-gradient(#334155 1px, transparent 1px),
                radial-gradient(#334155 1px, transparent 1px);
        }
</style>
    <!-- Background Pattern -->
    <div class="fixed inset-0 code-pattern opacity-30 -z-1 size-full left-0 top-0"></div>

    <!-- Main Content -->
    <main class="relative z-10 min-h-[calc(100vh-200px)] flex items-center justify-center px-6 py-12">
        <div class="container mx-auto max-w-4xl">
            <div class="text-center">
                <!-- Animated 404 -->
                <div class="relative mb-8">
                    <div class="text-[120px] md:text-[180px] font-black leading-none">
                        <span class="gradient-text floating">4</span>
                        <span class="gradient-text floating" style="animation-delay: 0.2s">0</span>
                        <span class="gradient-text floating" style="animation-delay: 0.4s">4</span>
                    </div>
                    
                    <!-- Floating Code Elements -->
                    <div class="absolute top-0 -left-4 text-4xl opacity-20 floating" style="animation-delay: 0.6s">
                        { }
                    </div>
                    <div class="absolute top-10 -right-4 text-4xl opacity-20 floating" style="animation-delay: 0.8s">
                        &lt;/&gt;
                    </div>
                    <div class="absolute bottom-10 left-10 text-3xl opacity-20 floating" style="animation-delay: 1s">
                        console.log();
                    </div>
                    <div class="absolute bottom-0 right-10 text-3xl opacity-20 floating" style="animation-delay: 1.2s">
                        function()
                    </div>
                </div>
                
                <!-- Error Message -->
                <div class="mb-10">
                    <h1 class="text-3xl md:text-4xl font-bold mb-4">
                        Page <span class="glitch gradient-text">Not Found</span>
                    </h1>
                    <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-6">
                        Oops! It looks like you've encountered a bug in our code. The page you're looking for doesn't exist or has been moved.
                    </p>
                    
                    <!-- Error Details -->
                    <div class="inline-block bg-gray-100 dark:bg-gray-800 rounded-xl p-4 mb-6">
                        <div class="flex items-center justify-center space-x-4 text-sm">
                            <div class="flex items-center">
                                <div class="w-3 h-3 rounded-full bg-red-500 mr-2 blink"></div>
                                <span>Error 404</span>
                            </div>
                            <div class="text-gray-400">|</div>
                            <div class="flex items-center">
                                <i class="fas fa-exclamation-triangle text-yellow-500 mr-2"></i>
                                <span>Page Not Found</span>
                            </div>
                            <div class="text-gray-400">|</div>
                            <div class="flex items-center">
                                <i class="fas fa-clock text-blue-500 mr-2"></i>
                                <span id="current-time"></span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Error Code Snippet -->
                <div class="max-w-2xl mx-auto mb-10">
                    <div class="bg-gray-950 rounded-xl p-6 text-left">
                        <div class="flex items-center justify-between mb-4">
                            <div class="text-sm text-gray-400">
                                <i class="fas fa-file-code mr-2"></i>
                                error_log.md
                            </div>
                            <div class="flex items-center space-x-2">
                                <span class="w-3 h-3 rounded-full bg-red-500"></span>
                                <span class="w-3 h-3 rounded-full bg-yellow-500"></span>
                                <span class="w-3 h-3 rounded-full bg-green-500"></span>
                            </div>
                        </div>
                        <pre class="text-green-400 text-sm overflow-x-auto">
<span class="text-gray-400">1 |</span> <span class="text-blue-400">const</span> <span class="text-yellow-300">pageStatus</span> = <span class="text-green-400">404</span>;
<span class="text-gray-400">2 |</span> <span class="text-blue-400">const</span> <span class="text-yellow-300">errorMessage</span> = <span class="text-green-400">"Page not found"</span>;
<span class="text-gray-400">3 |</span>
<span class="text-gray-400">4 |</span> <span class="text-blue-400">if</span> (pageStatus === <span class="text-green-400">404</span>) &lbrace;
<span class="text-gray-400">5 |</span>   console.<span class="text-yellow-300">error</span>(<span class="text-green-400">`ðŸš¨ $&lbrace;errorMessage&rbrace;`</span>);
<span class="text-gray-400">6 |</span>   <span class="text-purple-400">redirectToHome</span>();
<span class="text-gray-400">7 |</span> &rbrace; <span class="text-blue-400">else</span> &lbrace;
<span class="text-gray-400">8 |</span>   <span class="text-yellow-300">continueNavigation</span>();
<span class="text-gray-400">9 |</span> &rbrace;</pre>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row justify-center gap-4">
                    <a href="index.html" class="px-8 py-3 gradient-bg text-white font-medium rounded-full hover:opacity-90 transition-opacity shadow-lg flex items-center justify-center">
                        <i class="fas fa-home mr-2"></i>Back to Homepage
                    </a>
                    <a href="javascript:history.back()" class="px-8 py-3 bg-white dark:bg-gray-800 border-2 border-gray-300 dark:border-gray-700 text-gray-800 dark:text-gray-200 font-medium rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors flex items-center justify-center">
                        <i class="fas fa-arrow-left mr-2"></i>Go Back
                    </a>
                    <a href="#" class="px-8 py-3 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium rounded-full hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors flex items-center justify-center">
                        <i class="fas fa-question-circle mr-2"></i>Report Issue
                    </a>
                </div>
                
                <!-- Quick Links -->
                <div class="mt-12">
                    <p class="text-gray-500 dark:text-gray-400 mb-4">Try these pages instead:</p>
                    <div class="flex flex-wrap justify-center gap-3">
                        <a href="index.html" class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                            Home
                        </a>
                        <a href="course-topics.html" class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                            Courses
                        </a>
                        <a href="interview-questions.html" class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                            Interview Qs
                        </a>
                        <a href="project-ideas.html" class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                            Projects
                        </a>
                        <a href="quiz.html" class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                            Quiz
                        </a>
                        <a href="about.html" class="px-4 py-2 bg-gray-100 dark:bg-gray-800 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
                            About
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script is:inline>
    // Update Current Time
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            document.getElementById('current-time').textContent = timeString;
        }
        
        // Initialize time
        updateTime();
        setInterval(updateTime, 60000); // Update every minute
        
        // Random glitch effect on the 404 text
        const glitchText = document.querySelector('.glitch');
        setInterval(() => {
            glitchText.classList.remove('glitch');
            setTimeout(() => {
                glitchText.classList.add('glitch');
            }, 10);
        }, 3000);
        
        // Typewriter effect for console message (optional)
        function typeWriter() {
            const consoleText = "ðŸš¨ Page not found - Redirecting to homepage...";
            const consoleElement = document.createElement('div');
            consoleElement.className = 'bg-gray-900 text-green-400 font-mono text-sm p-3 rounded-lg mt-4';
            consoleElement.style.opacity = '0';
            consoleElement.style.transform = 'translateY(10px)';
            consoleElement.style.transition = 'opacity 0.3s ease, transform 0.3s ease';
            
            const consoleContainer = document.querySelector('.bg-gray-900.rounded-xl');
            if (consoleContainer) {
                consoleContainer.parentNode.insertBefore(consoleElement, consoleContainer.nextSibling);
                
                setTimeout(() => {
                    consoleElement.style.opacity = '1';
                    consoleElement.style.transform = 'translateY(0)';
                    
                    let i = 0;
                    const typingInterval = setInterval(() => {
                        if (i < consoleText.length) {
                            consoleElement.textContent += consoleText.charAt(i);
                            i++;
                        } else {
                            clearInterval(typingInterval);
                            // Add blinking cursor
                            consoleElement.innerHTML += '<span class="blink">â–ˆ</span>';
                        }
                    }, 50);
                }, 1000);
            }
        }
        
        // Start typewriter effect after a delay
        setTimeout(typeWriter, 2000);
        
        // Add some random floating code elements
        function createFloatingCode() {
            const codeElements = ['{ }', '&lt;/&gt;', 'console.log()', 'function()', 'const', '=>', '() =>', 'return', 'import', 'export'];
            const colors = ['text-blue-400', 'text-purple-400', 'text-green-400', 'text-yellow-400', 'text-red-400'];
            
            const container = document.querySelector('main');
            
            // Create 8 floating elements
            for (let i = 0; i < 8; i++) {
                const element = document.createElement('div');
                const randomElement = codeElements[Math.floor(Math.random() * codeElements.length)];
                const randomColor = colors[Math.floor(Math.random() * colors.length)];
                
                element.className = `absolute ${randomColor} opacity-10 text-xl floating`;
                element.style.left = `${Math.random() * 100}%`;
                element.style.top = `${Math.random() * 100}%`;
                element.style.animationDelay = `${Math.random() * 2}s`;
                element.style.animationDuration = `${3 + Math.random() * 3}s`;
                element.innerHTML = randomElement;
                
                container.appendChild(element);
            }
        }
        
        // Create floating elements after page load
        setTimeout(createFloatingCode, 500);
        
        // Add hover effect to code snippet
        document.querySelector('.bg-gray-900.rounded-xl').addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-5px)';
            this.style.transition = 'transform 0.3s ease';
        });
        
        document.querySelector('.bg-gray-900.rounded-xl').addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0)';
        });
    </script>
</MainLayout>