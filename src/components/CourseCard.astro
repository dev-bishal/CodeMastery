---
interface Props {
    courseTitle: string,
    cardText: string,
    imageFileName: string,
    isPaid: boolean,
    level: string,
    slug: string,
    color: string,
}

const {courseTitle, cardText, imageFileName, isPaid, level, slug, color} = Astro.props;
---

<div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden card-hover animate-on-scroll delay-100">
    <div class="p-6">
        <div class="flex items-center justify-between mb-4">
            <!-- Course Image -->
            <div class="w-20 h-1w-20 rounded-xl overflow-hidden">
                <img src={`/CodeMastery/assets/course-logo/${imageFileName}.png`} alt={`${courseTitle} Course`}
                    class="w-full h-full object-cover border-0" />
            </div>
            <span
                class="px-3 py-1 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded-full text-sm font-medium">{level}</span>
        </div>
        <h3 class="text-xl font-bold mb-2">{courseTitle}</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">{cardText}</p>
        <div class="flex justify-between items-center">
            <div class="flex items-center">
                <i class="fa-regular fa-credit-card text-purple-500 mr-2"></i>
                <span class="text-sm">{isPaid ? "Free" : "Paid"}</span>
            </div>
            <div class="flex items-center">
                <i class="fas fa-signal text-purple-500 mr-2"></i>
                <span class="text-sm">{8} modules</span>
            </div>
        </div>
    </div>
    <!--  gradient-bg -->
    <div class="px-6 py-4 bg-gray-50 dark:bg-gray-900 border-t border-gray-100 dark:border-gray-700">
        <a href={`/learning/${slug}`} class="w-full block text-center py-2 text-white font-medium rounded-lg hover:opacity-90 transition-opacity"
            style=`background-color: ${color};`
        >Start Learning</a>
    </div>
</div>